<h2>Listing vehicles</h2>

<%= link_to 'show statistics of enrolled vehicles', '/analytics/int2' %>

<br/>

<table border="1" class="ft_dbtab">
  <tr bgcolor="#F0FFF0">
    <th>Vin</th>
    <th>License plate</th>
    <th>Customer</th>
    <th>Make</th>
    <th>Model</th>
    <th>Sub</th>
    <th>Made in</th>
    <th>MSRP</th>
    <th>Cyl</th>
    <th>Displ.</th>
    <th>Drive</th>
    <th>Color</th>
    <th>Doors</th>
    <th>Mileage</th>
    <th>Contract</th>
  </tr>

<% @vehicles.each do |vehicle| %>
  <tr>
    <td><%= vehicle.vin %></td>
    <td>
         <%= vehicle.license_plate %>
    </td>
    <td>
      <%= vehicle.customer.first_name %> <%= vehicle.customer.last_name %>
    </td>
    <td><%= vehicle.make.name %></td>
    <td>
	<% if vehicle.model %>
        	<%= vehicle.model.name%>
	<% else %>
		<i> N/A </i>
	<% end %>
    </td>

    <td>
      <% if vehicle.submodel %>
        <%= vehicle.submodel.name %>
      <% else %>
        <i>N/A</i>
      <% end %>
    </td>
    <td><%= countryOrUnk(vehicle) %></td>
    <td>$<%= number_with_precision(vehicle.msrp, precision: 0) %></td>
    <td><%= vehicle.engine_cyl %></td>

    <td>
      <% if vehicle.engine_displacement %>
        <%= vehicle.engine_displacement.name %>
      <% else %>
        <i>no_engine_disp</i>
      <% end %>
    </td>
 
    <td>
      <% if vehicle.wheel_drive %>
        <%= vehicle.wheel_drive.name %>
      <% else %>
        <i>no_engine_disp</i>
      <% end %>
    </td>
    <td><%= vehicle.color.name %></td>
    <td><%= vehicle.doors %></td>
    <td><%= vehicle.mileage %></td>
    <td>
      <% if vehicle.contract %>
        <%= vehicle.contract.number %>
      <% else %>
        <i>None</i>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

