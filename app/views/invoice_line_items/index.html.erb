<h1>Listing invoice_line_items</h1>

<table border="1" class="ft_dbtab">
  <tr bgcolor="#F0FFF0">
    <th>Amount</th>
    <th>Invoice Number</th>
    <th>Purpose</th>
    <th>Description</th>
    <th>Service visit</th>
    <th>Vehicle</th>
    <th colspan="3"><i>Actions</i></th>
  </tr>

<% @invoice_line_items.each do |invoice_line_item| %>
  <tr>
    <td><%= number_to_currency(invoice_line_item.amount) %></td>
    <td><%= invoice_line_item.invoice.invoice_number %></td>
    <td><%= invoice_line_item.line_item_purpose.name %></td>
    <td><%= invoice_line_item.description %></td>
    <td><%= invoice_line_item.service_visit.sdate.strftime("%b %d, %Y") %></td>
    <td><%= invoice_line_item.vehicle.ymmText %></td>
    <td><%= link_to 'Show', invoice_line_item %></td>
    <td><%= link_to 'Edit', edit_invoice_line_item_path(invoice_line_item) %></td>
    <td><%= link_to 'Destroy', invoice_line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

