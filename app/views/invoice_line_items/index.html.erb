    <td><%= invoice_line_item.invoice_id %></td>
    <td><%= invoice_line_item.line_item_purpose_id %></td>
    <td><%= invoice_line_item.description %></td>
    <td><%= invoice_line_item.service_visit_id %></td>
    <td><%= invoice_line_item.vehicle_id %></td>
    <td><%= link_to 'Show', invoice_line_item %></td>
    <td><%= link_to 'Edit', edit_invoice_line_item_path(invoice_line_item) %></td>
