<h2>Listing purchase_orders</h2>

<table border="1" class="ft_dbtab">
  <tr bgcolor="#F0FFF0">
    <th>Po number</th>
    <th>Vendor</th>
    <th>Date time</th>
    <th colspan="3"><i>Actions</i></th>
  </tr>

<% @purchase_orders.each do |purchase_order| %>
  <tr>
    <td><%= purchase_order.po_number %></td>
    <td><%= purchase_order.vendor.name %></td>
    <td><%= purchase_order.date_time %></td>
    <td><%= link_to 'Show', purchase_order %></td>
    <td><%= link_to 'Edit', edit_purchase_order_path(purchase_order) %></td>
    <td><%= link_to 'Destroy', purchase_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

