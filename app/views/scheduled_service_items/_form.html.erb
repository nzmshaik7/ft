<P>
Items that need to be serviced during a particular ScheduledService
for a particular vehicle.
</P>

<%= form_for(@scheduled_service_item) do |f| %>
  <% if @scheduled_service_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@scheduled_service_item.errors.count, "error") %> prohibited this scheduled_service_item from being saved:</h2>

      <ul>
      <% @scheduled_service_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :scheduled_service_id %><font color="#800000">*</font><br />
    <%= select("scheduled_service_item", "scheduled_service_id", 
            @scheduledServiceCollect, {prompt: 'Select Scheduled Service'}) %>
  </div>
  <div class="field">
    <%= f.label :service_description_id %><br />
    <%= select("scheduled_service_item", "service_description_id", 
        @serviceDescriptionCollect, {prompt: 'Select Service Description'}) %>
  </div>
  <div class="field">
    <%= f.label :other %> (if no description item is selected)<br />
    <%= f.text_field :other %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
