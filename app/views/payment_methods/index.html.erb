<h2>Listing payment_methods</h2>

<table border="1" class="ft_dbtab">
  <tr bgcolor="#F0FFF0">
    <th>Customer</th>
    <th>Payment Type</th>
    <th>Priority</th>
    <th>Account number</th>
    <th>Routing number</th>
    <th>Expiration month</th>
    <th>Expiration year</th>
    <th>Image</th>
    <th colspan="3"><i>Actions</i></th>
  </tr>

<% @payment_methods.each do |payment_method| %>
  <tr>
    <td><%= customerName2(payment_method.customer) %></td>
    <td><%= payment_method.payment_type.name %></td>
    <td><%= payment_method.priority %></td>
    <td><%= payment_method.account_number_id %></td>
    <td><%= payment_method.routing_number %></td>
    <td><%= payment_method.expiration_month %></td>
    <td><%= payment_method.expiration_year %></td>
    <td><%= payment_method.image_id %></td>
    <td><%= link_to 'Show', payment_method %></td>
    <td><%= link_to 'Edit', edit_payment_method_path(payment_method) %></td>
    <td><%= link_to 'Destroy', payment_method, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

