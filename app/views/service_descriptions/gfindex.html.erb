<h2>Listing Service Line Item Descriptions</h2>
<P>
<B>For dropdown in service line item</B>
</P>

<table border="1" class="ft_dbtab">
  <tr bgcolor="#F0FFF0">
    <th>Name</th>
    <th>Service category</th>
    <th>Labor rate retail</th>
    <th>Labor hours retail</th>
    <th><i>Actions</i></th>
  </tr>

<% @service_descriptions.each do |service_description| %>
  <tr>
    <td><%= service_description.name %></td>
    <td><%= service_description.service_category.name %></td>
    <td><%= number_to_currency(service_description.labor_rate_retail) %></td>
    <td><%= number_with_precision(service_description.labor_hours_retail,
                                  precision: 2) %></td>
    <td>
      <%= link_to 'Edit',
                  "/service_descriptions/#{service_description.id}/gfedit" %>
    </td>
  </tr>
<% end %>
</table>

<br />

<form action="/service_descriptions/gfnew" style="display: inline;">
  <input type="submit" value="Add New Service Line Item Description"> 
</form>
