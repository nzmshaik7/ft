</P>

<%= form_for(@service_description) do |f| %>
  <% if @service_description.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service_description.errors.count, "error") %> prohibited this service_description from being saved:</h2>

      <ul>
      <% @service_description.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if defined?(isGroundFloor) and isGroundFloor %>
    <input name="is_ground_floor" type="hidden" value="Y" />
  <% end %>
  <div class="field">
    <%= f.label :name %>:<font color="#800000">*</font>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :service_category_id %>:<font color="#800000">*</font>
    <%= select("service_description", "service_category_id", 
                @serviceCategoryCollect, {prompt: 'Select Service Category'}) %>
  </div>
  <div class="field">
    <%= f.label :labor_rate_retail %>:
    <%= f.text_field :labor_rate_retail %>
  </div>
  <div class="field">
    <%= f.label :labor_hours_retail %>:
    <%= f.text_field :labor_hours_retail %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
