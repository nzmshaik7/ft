<h1>Listing payments</h1>

<table>
  <tr>
    <th>Date time</th>
    <th>Invoice</th>
    <th>Contract</th>
    <th>Finance agreement</th>
    <th>Customer</th>
    <th>Amount</th>
    <th>Payment method</th>
    <th>Status</th>
    <th>Merchant services status</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.date_time %></td>
    <td><%= payment.invoice_id %></td>
    <td><%= payment.contract_id %></td>
    <td><%= payment.finance_agreement_id %></td>
    <td><%= payment.customer_id %></td>
    <td><%= payment.amount %></td>
    <td><%= payment.payment_method_id %></td>
    <td><%= payment.status %></td>
    <td><%= payment.merchant_services_status %></td>
    <td><%= payment.comment %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

