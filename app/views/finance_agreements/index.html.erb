<% @finance_agreements.each do |finance_agreement| %>
  <tr>
    <td><%= finance_agreement.customer_id %></td>
    <td><%= finance_agreement.missed_payment_fee %></td>
    <td><%= finance_agreement.total_principal %></td>
    <td><%= finance_agreement.finance_fee %></td>
    <td><%= finance_agreement.monthly_payment_amount %></td>
    <td><%= finance_agreement.start_date %></td>
    <td><%= finance_agreement.end_date %></td>
