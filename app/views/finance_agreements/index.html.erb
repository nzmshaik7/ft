    <td><%= finance_agreement.agreement_image_id %></td>
    <td><%= link_to 'Show', finance_agreement %></td>
    <td><%= link_to 'Edit', edit_finance_agreement_path(finance_agreement) %></td>
    <td><%= link_to 'Destroy', finance_agreement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
