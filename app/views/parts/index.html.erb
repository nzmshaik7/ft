<h1>Listing parts</h1>

<table border="1" class="ft_dbtab">
  <tr bgcolor="#F0FFF0">
    <th>Part manufacturer</th>
    <th>Part name</th>
    <th>Description</th>
    <th>Part number</th>
    <th>Actual cost</th>
    <th>Retail price</th>
    <th colspan="3"><i>Actions</i></th>
  </tr>

<% @parts.each do |part| %>
  <tr>
    <td><%= part.part_manufacturer.name %></td>
    <td><%= part.part_name.name %></td>
    <td><%= part.description %></td>
    <td><%= part.part_number %></td>
    <td><%= number_to_currency(part.actual_cost) %></td>
    <td><%= number_to_currency(part.retail_price) %></td>
    <td><%= link_to 'Show', part %></td>
    <td><%= link_to 'Edit', edit_part_path(part) %></td>
    <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

