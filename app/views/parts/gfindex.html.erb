<h2>Listing parts</h2>

<table border="1" class="ft_dbtab">
  <tr bgcolor="#F0FFF0">
    <th>Part manufacturer</th>
    <th>Part name</th>
    <th>Description</th>
    <th>Part number</th>
    <th>Retail price</th>
    <th><i>Actions</i></th>
  </tr>

<% @parts.each do |part| %>
  <tr>
    <td><%= part.part_manufacturer.name %></td>
    <td><%= part.part_name.name %></td>
    <td><%= part.description %></td>
    <td><%= part.part_number %></td>
    <td><%= number_to_currency(part.retail_price) %></td>
    <td><%= link_to 'Edit', "/parts/#{part.id}/gfedit" %></td>
  </tr>
<% end %>
</table>

<br />

<form action="/parts/gfnew" style="display: inline;">
  <input type="submit" value="Add New Part"> 
</form>
&nbsp; &nbsp; 
<form action="/parts/gfnewplus" style="display: inline;">
  <input type="submit" value="Add New Part and Name or Manufacturer"> 
</form>
