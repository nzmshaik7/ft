<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if defined?(isGroundFloor) and isGroundFloor %>
    <input name="is_ground_floor" type="hidden" value="Y" />
  <% end %>
  <div class="field">
    <%= f.label :first_name %>:<font color="#800000">*</font>
    <%= f.text_field :first_name %>
    &nbsp; &nbsp; &nbsp; &nbsp; 
    <%= f.label :last_name %>:<font color="#800000">*</font>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :ssn %>:
    <%= f.text_field :ssn %>
    &nbsp; &nbsp; &nbsp; &nbsp; 
    <%= f.label :store_id %>:<font color="#800000">*</font>
    <%= select("employee", "store_id", @storeCollect,
                                                  {prompt: 'Select Store'}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
