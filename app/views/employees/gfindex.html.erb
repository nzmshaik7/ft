<h2>Listing employees</h2>

<table border="1" class="ft_dbtab">
  <tr bgcolor="#F0FFF0">
    <th>First name</th>
    <th>Last name</th>
    <th>Ssn</th>
    <th>Store</th>
    <th><i>Actions</i></th>
  </tr>

<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.first_name %></td>
    <td><%= employee.last_name %></td>
    <td><%= employee.ssn %></td>
    <td>
      <% if employee.store %>
        <%= employee.store.number %>
      <% else %>
        <i>None</i>
      <% end %>
    </td>
    <td><%= link_to 'Edit', "/employees/#{employee.id}/gfedit" %></td>
  </tr>
<% end %>
</table>

<br />

<form action="/employees/gfnew" style="display: inline;">
  <input type="submit" value="Add New Employee"> 
</form>
