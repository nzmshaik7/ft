<h1>Listing inventories</h1>

<table border="1" class="ft_dbtab">
  <tr bgcolor="#F0FFF0">
    <th>Store</th>
    <th>Part</th>
    <th>Count</th>
    <th colspan="3"><i>Actions</i></th>
  </tr>

<% @inventories.each do |inventory| %>
  <tr>
    <td><%= inventory.store.number %>/<%= inventory.store.name %></td>
    <td><%= inventory.part.number %>/<%= inventory.part.name.name %></td>
    <td><%= inventory.count %></td>
    <td><%= link_to 'Show', inventory %></td>
    <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
    <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

